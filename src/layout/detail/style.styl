.breadcrumb
  color: #80bd01;
  font-size: 14px;
  a
    color: #80bd01;
  span + span 
    margin-left: 5px;
  .pathname
    color: #999;

.header
  .topic_full_title
    font-size: 22px;
    font-weight: 700;
    margin: 8px 0;
    display: inline-block;
    vertical-align: bottom;
    width: 75%;
    line-height: 130%;
    .put_top
      background: #80bd01;
      padding: 2px 4px;
      border-radius: 3px;
      color: #fff;
      font-size: 12px;
      margin-right: 10px;
  .changes
    font-size: 12px;
    color: #838383;
    span + span 
      margin-left: 10px;

.content
  padding: 10px;
  border-top: 1px solid #e5e5e5;
  >div
    margin: 0 10px;
  p
    font-size: 15px;
    line-height: 1.7em;
    overflow: auto;
    padding-bottom: 15px;
    img
      height: auto;
      max-width: 100%;
      vertical-align: middle;
      border: 0;
  a
    color: #08c;
    code
      color: #000;
      background-color: #fcfafa;
      padding: 4px 6px;
    &:hover
      text-decoration: underline;
  h1
    font-size: 32.5px;
  ul
    padding: 0;
    margin: 0 0 10px 25px;
    li
      list-style-type: disc;
      line-height: 2em;
      font-size: 14px;