.header
  background-color: rgb(68, 68, 68);
  .navContainer
    width: 100%;
    padding: 5px 0;
    min-width: 960px;
    max-width: 1400px;
    margin: 0 auto;
    line-height: 40px;
    .brand
      display: inline-block;
      vertical-align: middle;
      padding-right: 20px;
      img
        width: 120px;
        vertical-align: top;
    
    .headerSearch
      display: inline-block;
      i
        position: relative;
        z-index: 2;
        color: rgb(152, 152, 152);
      input
        width: 206px;
        height: 26px;
        border-radius: 15px;
        border: none;
        margin-left: -20px;
        padding-left: 20px;
        background-color: #888;
        transition: all .5s;
        &:hover
          background-color: #fff;
      
    .nav
      float: right;
      height: 40px;
      .navItem
        display: inline-block;
        font-size: 13px;
        padding: 0 15px;
        a
          color: #ccc;
          &:hover
            color: #fff;

        